{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "unittest",
      "type": "shell",
      "command": "python3 -m unittest discover -s tests -p '*_test.py'",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [
        {
          "owner": "python",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^\\s*File \"([^\"]+)\", line (\\d+)",
              "file": 1,
              "line": 2
            },
            {
              "regexp": "^\\s*(.*)$",
              "message": 1
            }
          ]
        }
      ]
    }
  ]
}